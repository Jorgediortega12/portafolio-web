---
import GitHub from "./icons/GitHub.astro";
import NextJS from "./icons/NextJS.astro";
import Tailwind from "./icons/Tailwind.astro";
import Prisma from "./icons/Prisma.astro";
import Docker from "./icons/Docker.astro";
import React from "./icons/React.astro";
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";
import Postgrest from "./icons/Postgrest.astro";

const TAGS = {
  NEXT: {
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJS
  },
  TAILWIND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind
  },
  ZUSTAND: {
    name: "Tailwind",
    class: "bg-[#003159] text-white",
    icon: Tailwind
  },
  PRISMA: {
    name: "Prisma",
    class: "bg-black text-white",
    icon: Prisma
  },
  REACT: {
    name: "React-Native",
    class: "bg-[#003159] text-white",
    icon: React
  },
  DOCKER: {
    name: "Docker",
    class: "bg-blue-700 text-white",
    icon: Docker
  },
  POSTGRES: {
    name: "Postgres",
    class: "bg-[#003159] text-white",
    icon: Postgrest
  }
};
const PROJECTS = [
  {
    title: "Crunchyroll - Clone",
    description:
      "Leading global platform for streaming Japanese anime, offering the broadest and most accessible catalog for fans around the world.",
    link: "https://crunchyroll-clone-ecru.vercel.app/",
    github: "https://github.com/Jorgediortega12/crunchyroll-clone",
    image: "/projects/crunchy.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.PRISMA, TAGS.DOCKER, TAGS.POSTGRES]
  },
  {
    title: "Teslo - Shop",
    description:
      "A web app inspired by Tesla's experience, with a diverse catalog offering clothing for all genders, from casual women's fashion to fun, energetic options for kids.",
    github: "https://github.com/Jorgediortega12/tesloshop",
    image: "/projects/tesloshop.png",
    tags: [TAGS.NEXT, TAGS.TAILWIND, TAGS.PRISMA, TAGS.DOCKER, TAGS.POSTGRES]
  },
  {
    title: "Product - App",
    description:
      "Aplicación movil que maneja un catálago de prendas de moda, lleva desde lo mejor de todos los estilos, hasta aquellas que inspiran los viejos clasicos de la moda.",
    github: "https://github.com/Jorgediortega12/productapp",
    image: "/projects/productapp.png",
    tags: [TAGS.REACT]
  },
  {
    title: "Videos - App",
    description:
      "A simple app that seeks to demonstrate certain knowledge, albeit simple in clean code, applying entities and repositories for video consumption.",
    github: "https://github.com/Jorgediortega12/videosapp",
    image: "/projects/videoapp.png",
    tags: [TAGS.REACT]
  }
];
---

<div class="flex flex-col gap-y-16">
  {
    PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
            <img
              alt="Imagen de Jorge Diaz"
              class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105"
              loading="lazy"
              src={image}
            />
          </div>
        </div>

        <div class="w-full md:w-1/2 md:max-w-lg">
          <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
            {title}
          </h3>
          <div class="flex flex-wrap mt-2">
            <ul class="flex flex-row mb-2 gap-x-2">
              {tags.map((tag) => (
                <li>
                  <span
                    class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                  >
                    <tag.icon class="size-4" />
                    {tag.name}
                  </span>
                </li>
              ))}
            </ul>

            <div class="mt-2 text-gray-700 dark:text-gray-400">
              {description}
            </div>
            <footer class="flex items-end justify-start mt-4 gap-x-4">
              {github && (
                <LinkButton href={github}>
                  <GitHub class="size-6" />
                  Code
                </LinkButton>
              )}
              {link && (
                <LinkButton href={link}>
                  <Link class="size-4" />
                  Preview
                </LinkButton>
              )}
            </footer>
          </div>
        </div>
      </article>
    ))
  }
</div>
